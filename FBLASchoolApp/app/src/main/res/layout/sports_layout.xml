<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8E5B1B">

            <ImageView
                android:id="@+id/imgViewSportsLogo"
                android:layout_width="125dp"
                android:layout_height="113dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/txtSportsTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Sport Title"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imgViewSportsLogo"
                app:layout_constraintTop_toTopOf="@+id/imgViewSportsLogo" />

            <TextView
                android:id="@+id/txtCoach"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Coach: "
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtSportsTitle"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/txtSportsTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtSportsTitle" />

            <TextView
                android:id="@+id/txtEmail2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email: "
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/txtCoach"
                app:layout_constraintTop_toBottomOf="@+id/txtCoach" />

            <ImageView
                android:id="@+id/imgViewTwitterBtn"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@+id/imgViewSportsLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtEmail2"
                app:srcCompat="@drawable/icons8twitter" />

            <ImageView
                android:id="@+id/imgViewMaxPrepsBtn"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="@+id/txtEmail2"
                app:layout_constraintTop_toBottomOf="@+id/txtEmail2"
                app:srcCompat="@drawable/maxprepsfloatingactionbtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>